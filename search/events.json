---
---

{
    "pages": [
        {%- assign dumps = site.data['events-nav'] | sort: 'event_date' -%}
        
        {%- for document in dumps reversed:true -%}
            {%- assign target_group_joined = document.target_group | join: ", " -%}
                {
                "title": "{{- document.name | remove: '"' -}}",
                "description": "{{- document.event_description | remove: '>' | remove: '"' | strip -}}",
                "targetGroup": "{{- target_group_joined -}}",
                "category": "{{- document.event_category -}}",
                "content": {{ document.content | strip_html | strip_newlines | strip | jsonify }},
                "url": "{{ document.url }}",
                "icon_path": "/assets/img/communities/{{- document.event_category | append : "s"| downcase | slugify -}}.svg",
                "event_date": "{{ document.event_date }}",
                "meta": "document"
                },
            {%- if forloop.last -%}{}{%- endif -%}
        {%- endfor -%}
    ]
}